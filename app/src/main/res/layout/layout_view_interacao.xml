<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    style="@style/ConteinerDashbord">

    <ImageView
        android:id="@+id/icCategoria"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_balao_fala"
    android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Texto da interação"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvTempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Há 5 horas"
            android:textSize="12sp"
            android:textColor="#888888"/>

        <TextView
            android:id="@+id/tvDetalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Detalhes"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_gravity="end"/>
    </LinearLayout>

</LinearLayout>
